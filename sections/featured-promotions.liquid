<section class="{{ section.settings.layout }}">
  <div class="grid">
    {% for block in section.blocks %}
      <div class="grid-item {% if section.settings.featured_promos_per_row == 2 %} large--one-half{% elsif section.settings.featured_promos_per_row == 3 %} large--one-third{% else %} large--one-quarter{% endif %} medium--one-half">
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}">
        {% endif %}

        <div class="{% if section.settings.rounded_image != blank %}rounded{% endif %}">
          {% if block.settings.image != nil %}
            <img  src="{{ block.settings.image | img_url: '300x' }}"
                  alt="{{ block.settings.image.alt }}"
                  data-src="{{ block.settings.image | img_url: '2048x' }}"
                  class="lazyload"
                  data-sizes="auto"
                  data-srcset=" {{ block.settings.image | img_url: '2048x' }} 2048w,
                                {{ block.settings.image | img_url: '1600x' }} 1600w,
                                {{ block.settings.image | img_url: '1200x' }} 1200w,
                                {{ block.settings.image | img_url: '1000x' }} 1000w,
                                {{ block.settings.image | img_url: '800x' }} 800w,
                                {{ block.settings.image | img_url: '600x' }} 600w,
                                {{ block.settings.image | img_url: '400x' }} 400w"
                   />
          {% else %}
            {% capture i %}{% cycle "1", "2", "3", "4", "5", "6" %}{% endcapture %}
            {{ 'collection-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--promotions' }}
          {% endif %}
        </div>

        {% if block.settings.title != blank %}
          <h2 class="thin">{{ block.settings.title | escape }}</h2>
          {% if section.settings.show_divider %}
            <div class="feature_divider"></div>
          {% endif %}
        {% endif %}
        {% if block.settings.link != blank %}
          </a>
        {% endif %}

        {% if block.settings.text != blank %}
          {{ block.settings.text }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Featured promotions",
  "class": "featured-promotions-section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "range",
      "id": "featured_promos_per_row",
      "label": "Promotions per row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "select",
      "id": "featured_links_style",
      "label": "Animation",
      "options": [
        {
          "value": "",
          "label": "None"
        },
        {
          "value": "animate_in",
          "label": "Fade In"
        },
        {
          "value": "animate_up",
          "label": "Fade Up"
        },
        {
          "value": "animate_down",
          "label": "Fade Down"
        }
      ],
      "default": "animate_down"
    },
    {
      "type": "checkbox",
      "id": "rounded_image",
      "label": "Rounded images",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "default": true,
      "label": "Show divider"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Promotion",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "840px wide recommended"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Header",
          "default": "Promotion"
        },
        {
          "type": "html",
          "id": "text",
          "label": "Text",
          "default": "This is a featured promotion block, add some text here to talk about your promotion."
        }
      ]
    }
  ],
  "presets": [{
    "name": "Featured promotions",
    "category": "Image",
